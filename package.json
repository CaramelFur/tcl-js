{
  "name": "tcl-js",
  "version": "3.0.0",
  "description": "tcl-js is a tcl intepreter written completely in Typescript. It's meant to replicate the tcl-sh interpreter as closely as possible.",
  "main": "dist/tcl.js",
  "scripts": {
    "run": "yarn run generate-nearley && ts-node ./test/test.ts",
    "debug": "yarn run generate-nearley && yarn run compile-typescript && node --nolazy --inspect-brk ./test/test.js",
    "test": "yarn run build && yarn run run-tests && yarn run report-coverage",
    "build": "yarn run make-prettier && yarn run generate-nearley && yarn run compile-typescript && yarn run generate-docs",
    "generate-nearley": "ts-node ./src/nearley/compile-nearley.ts",
    "make-prettier": "prettier --write ./src/ ./test/ | tr -d '\\033'",
    "compile-typescript": "rm -r dist && tsc",
    "generate-docs": "rm -r ./docs && typedoc --options ./typedoc.json ./src/",
    "run-tests": "nyc mocha -r ts-node/register test/index.ts",
    "report-coverage": "mkdir -p ./coverage/ && nyc report --reporter=text-lcov > coverage/coverage.lcov && codecov --disable=gcov",
    "start": "echo Error: There is nothing to start && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rubikscraft/tcl-js.git"
  },
  "license": "BSD-2-Clause",
  "keywords": [
    "tcl",
    "tcl/tk",
    "tcl-sh",
    "javascript",
    "interpreter",
    "language",
    "parser",
    "typescript",
    "script",
    "lexer"
  ],
  "author": "Rubikscraft <contact@rubikscraft.nl> (https://rubikscraft.nl)",
  "bugs": {
    "url": "https://github.com/rubikscraft/tcl-js/issues"
  },
  "homepage": "https://github.com/rubikscraft/tcl-js#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/moo": "^0.5.3",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "@types/nearley": "^2.11.1",
    "chai": "^4.2.0",
    "codecov": "^3.8.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "prettier-plugin-pegjs": "^0.3.2",
    "ts-node": "^9.1.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "moo": "^0.5.1",
    "nearley": "^2.20.1"
  }
}
